<p id="notice"><%= notice %></p>

  <div class="container">
    <div class="content">
      <div class="page-header">
          <h2><%= @ski.brand %> <%= @ski.name %> <small><%= @ski.model_year %> | <%= @ski.gender %></small></h2>
      </div>
      <div class="row">
        <div class="span4">
        <div id="this-carousel-id" class="carousel slide">
        <div class="carousel-inner">
          <div class="item active">
            <a/> 
              <%= image_tag(@ski.images.first.url, :class=>"ski-image") %> 
            </a>
            <div class="carousel-caption">
              <p>Picture 1</p>
              <p> <%= link_to "add link here", skis_url %> </p>
            </div>
          </div>
          <div class="item">
            <a/>
              <%= image_tag(@ski.images.last.url, :class=>"ski-image") %> 
            </a>
            <div class="carousel-caption">
              <p>Picture 2</p>
              <p> <%= link_to "add another link here", skis_url %> </p>
            </div>

          </div>
        </div>
        <a class="carousel-control left" href="#this-carousel-id" data-slide="prev">&lsaquo;</a>
        <a class="carousel-control right" href="#this-carousel-id" data-slide="next">&rsaquo;</a>
      </div>
      </div>
      <div class="span7"> 
        <h3>Comparison</h3>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Stores</th>
              <th>Sizes Availabile</th>
              <th>Total Price</th>
            </tr>
            </thead>
            <tbody>
              <% @store.each do |store| %>
              <tr>
                <td><%= store.name %></td>
                <td>  <% store.inventories.each do |inventory_object| %>
                  <li>
                <%= inventory_object.size_available %>
                  </li>
                  <% end %>
                  </td>
                <td><%= store.inventories.first.price %> </td>
              </tr>
              <% end %>
            </tbody>
        </table>

        <h4>Description</h4>
        <p>
          <%= @ski.description %>
        </p>

        <ul>
          <li><%= @ski.ski_type %></li>
          <li><%= @ski.ability_level %></li>
          <li><%= @ski.rocker_type %></li>
        </ul>

        <h4>Specs</h4>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Length (cm)</th>
              <% @spec.each do |spec| %>
              <th><%= spec.length %></th>
              <% end %>
            </tr>
            </thead>
            <tbody>
              <tr>
                <td>Turning Radius (m)</td>
                <% @spec.each do |spec| %>
                <td> <%= spec.turning_radius %></td>
                <% end %>
              </tr>
              <tr>
                <td>Tip Width (mm)</td>
                <% @spec.each do |spec| %>
                <td> <%= spec.tip_width %></td>
                <% end %>
              </tr>
              <tr>
              <td>Waist Width (mm)</td>
                <% @spec.each do |spec| %>
                <td> <%= spec.waist_width %></td>
                <% end %>
              </tr>
              <tr>
              <td>Tail Width (mm)</td>
                <% @spec.each do |spec| %>
                <td> <%= spec.tail_width %></td>
                <% end %>
              </tr>
              <tr>
              <td>Weigth (g)</td>
                <% @spec.each do |spec| %>
                <td> <%= spec.weight %></td>
                <% end %>
              </tr>
            </tbody>
        </table>
      </div>
    </div>
    </div>
  






